                android:textSize="50sp"
                android:textStyle="bold"
                android:onClick="clear"
                android:layout_margin="@dimen/button_margin"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
